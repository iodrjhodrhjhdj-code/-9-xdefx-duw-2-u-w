local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Workspace = game:GetService("Workspace")
local Players = game:GetService("Players")

-- Wait for LocalPlayer to ensure it exists
local LocalPlayer = Players.LocalPlayer
while not LocalPlayer do
    task.wait() -- Wait until LocalPlayer is available
    LocalPlayer = Players.LocalPlayer
end

-- Find the Blocks folder
local Blocks = Workspace:FindFirstChild("Blocks")
if not Blocks then
    return
end

-- Find the Sockets folder and Remote
local SocketsFolder = ReplicatedStorage:FindFirstChild("Sockets")
if not SocketsFolder then
    return
end

local Remote = SocketsFolder:FindFirstChild("VyLCd/1Oq0z88WxNzxdUUeeaCpKC7vYSQI8fyxm+YlA=")
if not Remote then
    return
end

-- List of possible directional ParticleEmitter names
local directionalEmitters = {
    "TopEffect",
    "RightEffect",
    "LeftEffect",
    "BackEffect",
    "FrontEffect",
    "BottomEffect"
}

-- Check if a block has any of the required ParticleEmitters with the specific ID
local function hasDirectionalEmitterWithID(block)
    for _, emitterName in ipairs(directionalEmitters) do
        local emitter = block:FindFirstChild(emitterName)
        if emitter and emitter:IsA("ParticleEmitter") and emitter.Texture == "rbxassetid://7756813371" then
            return true
        end
    end
    return false
end

-- Function to fire a remote
local function fireRemote(command, block, additionalArgs)
    if not block then
        return
    end

    local args = {
        [1] = "effect",
        [2] = block,
        [3] = { [1] = "!effect", [2] = command }
    }

    -- Add additional arguments if provided
    if additionalArgs then
        for _, v in ipairs(additionalArgs) do
            table.insert(args[3], v)
        end
    end

    args[4] = Enum.NormalId.Top
    Remote:FireServer(unpack(args))
end

-- Apply size effect (650) to all blocks with the required ParticleEmitters and ID
local function awaken()
    for _, block in ipairs(Blocks:GetChildren()) do
        if hasDirectionalEmitterWithID(block) then
            fireRemote("size", block, { "650" }) -- Size set to 650
            task.wait(0.05) -- Delay between blocks
        end
    end
end

-- Automatically run the awaken function
awaken()
